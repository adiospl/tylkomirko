<UserControl
    x:Class="Mirko_v2.Pages.EmbedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mirko_v2.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:controls="using:Mirko_v2.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding Main.SelectedEmbed, Mode=OneWay, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <MenuFlyout x:Key="SaveFlyout">
            <MenuFlyoutItem Text="zapisz" 
                            Command="{Binding SaveImageCommand}"/>
        </MenuFlyout>
    </UserControl.Resources>

    <ScrollViewer x:Name="ImageScrollViewer"
                  VerticalScrollBarVisibility="Hidden" 
                  HorizontalScrollBarVisibility="Hidden" 
                  IsDoubleTapEnabled="True"
                  ZoomMode="Enabled">
              
        <Image x:Name="Image"
               Source="{Binding EmbedData.URL}"
               Holding="Image_Holding"
               IsHoldingEnabled="True"
               IsDoubleTapEnabled="True"
               Stretch="Uniform" />
    </ScrollViewer>
</UserControl>
