<UserControl
    x:Class="Mirko.Pages.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mirko.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Mirko.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:models="using:Mirko.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}">

    <UserControl.Resources>        
        <DataTemplate x:Name="EntryTemplate"
                      x:DataType="models:EntryBaseViewModel">
            <controls:FullEntry Margin="-18,0,-18,0"/>
        </DataTemplate>

        <Popup x:Key="NewMirkoEntriesPopup"
               VerticalOffset="15"
               IsOpen="True">

            <Popup.Resources>
                <Storyboard x:Key="PopupFadeIn">
                    <DoubleAnimation Storyboard.TargetName="PopupGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     To="{ThemeResource AppHeaderOpacity}"
                                     Duration="0:0:0.2" />

                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PopupGrid"
                                                   Storyboard.TargetProperty="IsHitTestVisible"
                                                   BeginTime="0:0:0.2">
                        <DiscreteObjectKeyFrame KeyTime="0">
                            <DiscreteObjectKeyFrame.Value>
                                <x:Boolean>True</x:Boolean>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>

                <Storyboard x:Key="PopupFadeOut">
                    <DoubleAnimation Storyboard.TargetName="PopupGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0.0"
                                     Duration="0:0:0.2"/>

                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PopupGrid"
                                                   Storyboard.TargetProperty="IsHitTestVisible">
                        <DiscreteObjectKeyFrame KeyTime="0">
                            <DiscreteObjectKeyFrame.Value>
                                <x:Boolean>False</x:Boolean>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>

            </Popup.Resources>

            <Grid x:Name="PopupGrid"
                  Opacity="0"
                  Background="Transparent"
                  Height="44"
                  Width="44">

                <i:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{x:Bind ViewModel.AddNewMirkoEntries}" />
                    </core:EventTriggerBehavior>
                </i:Interaction.Behaviors>

                <Ellipse Fill="#67a7d2"
                         Height="44"
                         Width="44"/>
                <TextBlock Text="{x:Bind ViewModel.MirkoNewEntries.Count, Mode=OneWay}"
                           FontWeight="SemiBold"
                           FontSize="15.2"                           
                           Style="{StaticResource BaseTextBlockStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Popup>
    </UserControl.Resources>  
    
    <Grid x:Name="PivotPageGrid"
          Loaded="PivotPageGrid_Loaded">

        <Popup x:Name="TimeSpanIndicatorPopup"
               VerticalOffset="-22">

            <Popup.Resources>
                <Storyboard x:Name="TimeSpanIndicatorFadeIn">
                    <DoubleAnimation Storyboard.TargetName="TimeSpanIndicatorGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     To="{StaticResource AppHeaderOpacity}"
                                     Duration="0:0:0.2" />
                </Storyboard>

                <Storyboard x:Name="TimeSpanIndicatorFadeOut">
                    <DoubleAnimation Storyboard.TargetName="TimeSpanIndicatorGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0.0"
                                     Duration="0:0:0.2"/>
                </Storyboard>
            </Popup.Resources>

            <Grid x:Name="TimeSpanIndicatorGrid"
                  Background="Transparent"
                  Opacity="{StaticResource AppHeaderOpacity}"
                  Height="49"
                  Tapped="TimeSpanIndicatorGrid_Tapped">
                <TextBlock Foreground="{ThemeResource HashtagForeground}"
                           Margin="75,0,0,0"
                           Style="{StaticResource BodyTextBlockStyle}"
                           FontSize="14.4">
                    <Run Text="{x:Bind ViewModel.HotTimeSpan, Mode=OneWay, Converter={StaticResource HotTimeSpanStringConverter}}" /><Run Text="&#xe011;" FontFamily="Segoe UI Symbol"/>
                </TextBlock>
            </Grid>
        </Popup>
        
        <Popup x:Name="TimeSpanSelectionPopup"
               VerticalOffset="-220"
               Loaded="TimeSpanSelectionPopup_Loaded"
               Unloaded="TimeSpanSelectionPopup_Unloaded">

            <ListView x:Name="TimeSpanSelectionListBox"
                      Background="Black"
                      Canvas.ZIndex="1"
                      Opacity="0.85"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      SelectionMode="Single"
                      SelectionChanged="TimeSpanSelectionListBox_SelectionChanged"
                      Loaded="TimeSpanSelectionListBox_Loaded"
                      SelectedIndex="{x:Bind ViewModel.HotTimeSpan, Converter={StaticResource HotTimeSpanIndexConverter}, Mode=TwoWay}"
                      ItemContainerStyle="{StaticResource ListViewItemStretchNoTilt}"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled">

                <ListView.Header>
                    <Rectangle Height="270"
                               Fill="Transparent" />
                </ListView.Header>
                
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBlock Text="{x:Bind}"
                                   Margin="0,0,0,40"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Typography.Kerning="True"
                                   FontSize="19.2"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Items>
                    <x:String>z ostatniej godziny</x:String>
                    <x:String>z ostatnich 3 godzin</x:String>
                    <x:String>z ostatnich 6 godzin</x:String>
                    <x:String>z ostatnich 12 godzin</x:String>
                    <x:String>z ostatnich 24 godzin</x:String>
                </ListView.Items>

            </ListView>

        </Popup>

        <Pivot x:Name="MainPivot"
               Loaded="MainPivot_Loaded"
               HorizontalAlignment="Stretch"
               SelectedIndex="{x:Bind ViewModel.CurrentPivotItem, Mode=TwoWay}"
               SelectionChanged="MainPivot_SelectionChanged"
			   Style="{StaticResource CustomPivotStyle}">

            <!--Pivot item one-->
            <PivotItem Margin="0,0,0,0">
                <controls:ListViewEx x:Name="MirkoListView"
                                     ScrollingDown="ListView_ScrollingDown"
                                     ScrollingUp="ListView_ScrollingUp"
                                     Loaded="ListView_Loaded"
                                     Foreground="{ThemeResource EntryBodyForeground}"
                                     ItemsSource="{x:Bind ViewModel.MirkoEntries}"
                                     ItemTemplate="{StaticResource EntryTemplate}"
                                     ItemContainerStyle="{StaticResource ListViewItemStretchNoTilt}"
                                     IsItemClickEnabled="False"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     IncrementalLoadingThreshold="6"
                                     DataFetchSize="7"
                                     Tag="LV0">
                    
                    <ListView.Header>
                        <StackPanel>
                            <Rectangle Fill="Transparent"
                                       Height="{x:Bind ViewModel.ListViewHeaderHeight, Mode=OneWay}"/>
                        </StackPanel>
                    </ListView.Header>

                </controls:ListViewEx>
            </PivotItem>

            <!--Pivot item two-->
            <PivotItem Margin="0,0,0,0">
                <controls:ListViewEx x:Name="HotListView"
                                     ScrollingDown="ListView_ScrollingDown"
                                     ScrollingUp="ListView_ScrollingUp"
                                     Loaded="ListView_Loaded"
                                     ItemsSource="{x:Bind ViewModel.HotEntries}"
                                     ItemContainerStyle="{StaticResource ListViewItemStretchNoTilt}"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     IncrementalLoadingThreshold="6"
                                     DataFetchSize="7"
                                     IsItemClickEnabled="False"
                                     Tag="LV1">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <controls:FullEntry IsHot="True"
                                                Margin="-18,0,-18,0" />
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.Header>
                        <StackPanel>
                            <Rectangle Fill="Transparent"
                                       Height="{x:Bind ViewModel.ListViewHeaderHeight, Mode=OneWay}"/>

                            <TextBlock x:Name="NoItemsTB"
                                       Style="{StaticResource TextBlockNoItems}"
                                       Margin="0,8,0,0"
                                       Text="Brak wpisów."
                                       Visibility="{x:Bind ViewModel.HotEntries.HasNoItems, Converter={StaticResource BoolToVisibility}, Mode=OneWay}"/>

                        </StackPanel>
                    </ListView.Header>
                    
                    <ListView.Footer>
                        <Rectangle Height="10"
                                   Fill="Transparent" />
                    </ListView.Footer>

                </controls:ListViewEx>

            </PivotItem>

            <!--Pivot item three-->
            <PivotItem Margin="0,0,0,0">
                <controls:ListViewEx x:Name="FavListView"
                                     ScrollingDown="ListView_ScrollingDown"
                                     ScrollingUp="ListView_ScrollingUp"
                                     Loaded="ListView_Loaded"
                                     ItemsSource="{x:Bind ViewModel.FavEntries}"
                                     ItemTemplate="{StaticResource EntryTemplate}"
                                     ItemContainerStyle="{StaticResource ListViewItemStretchNoTilt}"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     IncrementalLoadingThreshold="6"
                                     DataFetchSize="7"
                                     IsItemClickEnabled="False"
                                     Tag="LV2">

                    <ListView.Header>
                        <StackPanel>
                            <Rectangle Fill="Transparent"
                                       Height="{x:Bind ViewModel.ListViewHeaderHeight, Mode=OneWay}"/>

                            <TextBlock Style="{StaticResource TextBlockNoItems}"
                                       Margin="0,8,0,0"
                                       Text="Brak wpisów."
                                       Visibility="{x:Bind ViewModel.FavEntries.HasNoItems, Converter={StaticResource BoolToVisibility}, Mode=OneWay}"/>
                        </StackPanel>
                    </ListView.Header>

                </controls:ListViewEx>
            </PivotItem>


            <!--Pivot item four-->
            <PivotItem Margin="0,0,0,0">
                <controls:ListViewEx x:Name="MyListView"
                                     ScrollingDown="ListView_ScrollingDown"
                                     ScrollingUp="ListView_ScrollingUp"
                                     Loaded="ListView_Loaded"
                                     ItemsSource="{x:Bind ViewModel.MyEntries}"
                                     ItemTemplate="{StaticResource EntryTemplate}"
                                     ItemContainerStyle="{StaticResource ListViewItemStretchNoTilt}"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     IncrementalLoadingThreshold="6"
                                     DataFetchSize="7"
                                     IsItemClickEnabled="False"
                                     Tag="LV3">

                    <ListView.Header>
                        <StackPanel>
                            <Rectangle Fill="Transparent"
                                       Height="{x:Bind ViewModel.ListViewHeaderHeight, Mode=OneWay}"/>

                            <TextBlock Style="{StaticResource TextBlockNoItems}"
                                       Margin="0,8,0,0"
                                       Text="Brak wpisów."
                                       Visibility="{x:Bind ViewModel.MyEntries.HasNoItems, Converter={StaticResource BoolToVisibility}, Mode=OneWay}"/>
                        </StackPanel>
                    </ListView.Header>

                </controls:ListViewEx>
            </PivotItem>
        </Pivot>
    </Grid>

</UserControl>
