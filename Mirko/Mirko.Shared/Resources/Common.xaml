<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Mirko.ViewModel">

    <x:Double x:Key="AppBarOpacity">0.95</x:Double>
    <x:Double x:Key="AppHeaderOpacity">0.8</x:Double>
    
    <SolidColorBrush x:Key="AppHeaderSelectionBrush" Color="#FF5917" />
    <SolidColorBrush x:Key="SettingsBackgroundDark" Color="#1C1C1C" />
    <SolidColorBrush x:Key="SettingsBackgroundLight" Color="White" />
    <SolidColorBrush x:Key="PageBackgroundDark" Color="Black" />
    <SolidColorBrush x:Key="PageBackgroundLight" Color="White" />
    <SolidColorBrush x:Key="NewEntryBackgroundDark" Color="#1B1B1B" />
    <SolidColorBrush x:Key="NewEntryBackgroundLight" Color="#EAEAEA" />

    <Color x:Key="StatusBarForegroundLight">#3D9CDE</Color>

    <SolidColorBrush x:Key="AuthorCommentFill" Color="White" />
    <SolidColorBrush x:Key="CommentDirectedFill" Color="#6cb0dd" />
    <SolidColorBrush x:Key="AuthorCommentFillLight" Color="DarkGray" />
    <SolidColorBrush x:Key="CommentDirectedFillLight" Color="#6cb0dd" />

    <SolidColorBrush x:Key="FavButtonCheckedFill" Color="#C38307" />

</ResourceDictionary>
